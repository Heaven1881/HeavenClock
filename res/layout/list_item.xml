<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="10">
        <TextView
                android:id="@+id/ItemTitle"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:textSize="20sp" android:text="@string/time"/>
        <TextView
                android:id="@+id/ItemText"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent" android:text="@string/description"/>
    </LinearLayout>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/itemSwitch" android:layout_weight="1" android:checked="false"/>
</LinearLayout>